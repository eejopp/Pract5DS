<Window x:Class="Pract4_DB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract4_DB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgCredentials"/>
        <TextBox x:Name="tbLogin" Grid.Row="0" VerticalAlignment="Center"/>
        <PasswordBox x:Name="tbPassword" Grid.Row="1" VerticalAlignment="Center"/>
        <Button x:Name="btnLogin" Grid.Row="2" Click="btnLogin_Click">Авторизоваться</Button>
    </Grid>
    
</Window>
